{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "<rootDir>/.jest/env-setup.js",
    "<rootDir>/.jest/global-mocks.js"
  ],
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/main.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.dto.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "testTimeout": 30000
}
